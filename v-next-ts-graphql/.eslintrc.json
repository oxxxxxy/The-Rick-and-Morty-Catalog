{
  "extends": [
    "next/core-web-vitals",
    "next/typescript"
  ],
	"ignorePatterns":[
		"**/packages/ts-*"
	],
	"rules": {
    "@next/next/no-img-element": "off",
    "@typescript-eslint/ban-ts-comment": [
			"error",
			{
				"ts-ignore": "allow-with-description"
			}
		],
		"@typescript-eslint/no-unused-vars": [
      "warn",
      { 
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_",
        "caughtErrorsIgnorePattern": "^_" 
      }
    ]
  }
}
